<strategies>
	<teams>
		<team name="left"/>
		<team name="right"/>
	</teams>

	<!-- Real Game strategies -->
	<strategy name="main_pr">
		<actionref ref="game_start"/>
		
		<tasklist name="Main actions">
			<!-- Load the 3 side atoms and chaos atoms, and unload them in the accelerator -->
			<orderref ref="delay" name="10 points no game over" reward="10"/>

			<tasklist name="First atoms cycle">
				<actionref ref="load_side_atoms"/>
				<!-- <actionref ref="load_chaos_atoms"/> -->
				<actionref ref="unload_tower" name="Unload1"/>
			</tasklist>
			
			<tasklist name="Goldenium cycle">
				<actionref ref="load_goldenium"/>
				<actionref ref="unload_goldenium" needsprevious="true"/>
			</tasklist>

			<!-- <tasklist name="Second atoms cycle">
				<actionref ref="load_gr_tower"/>
				<actionref ref="unload_tower" name="Unload2"/>
			</tasklist> -->
			
			<!-- <actionref ref="goto_spawn"/> -->
		</tasklist>
	</strategy>


	<!-- Test strategies -->
	<strategy name="test_load_simple">
		<actionref ref="game_start"/>

		<tasklist name="Main actions">
				<actionref ref="load_side_atoms"/>
		</tasklist>
	</strategy>

	<strategy name="test_goldenium">
		<actionref ref="game_start"/>
		<tasklist name="Main actions">
				<tasklist name="Goldenium cycle">
				<actionref ref="load_goldenium"/>
				<actionref ref="unload_goldenium" needsprevious="true"/>
			</tasklist>
		</tasklist>
	</strategy>

	<strategy name="homologations">
		<actionref ref="game_start"/>

		<tasklist name="Main actions">
			<orderref ref="asserv_pwm" name="forward">
				<left>150</left>
				<right>150</right>
				<duration>1</duration>
			</orderref>

			<!-- take the atom -->
			<orderref ref="tower_load_atom"/>

			<orderref ref="asserv_pwm" name="flip">
				<left>-150</left>
				<right>150</right>
				<duration>1</duration>
			</orderref>

			<orderref ref="asserv_pwm" name="forward (return)">
				<left>150</left>
				<right>150</right>
				<duration>2</duration>
			</orderref>

			<!-- leave the atom -->
			<orderref ref="tower_unload_pliers"/> <!-- pince -->
		</tasklist>
	</strategy>

	<strategy name="homologations_slider">
		<actionref ref="game_start"/>

		<tasklist name="Main actions">
			<orderref ref="asserv_pwm" name="forward">
				<left>150</left>
				<right>150</right>
				<duration>1</duration>
			</orderref>

			<orderref ref="tower_load_atom"/> <!-- take  atom -->
			<orderref ref="tower_unload_slider"/> <!-- unload toboggan -->
		</tasklist>
	</strategy>
	
</strategies>
